{
  "name": "flusec",
  "displayName": "flusec",
  "description": "flutter vs code extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "onCommand:flusec.scanFile",
    "onCommand:flusec.manageRules",
    "onCommand:flusec.openFindings",
    "onCommand:flusec.updateRulePacks"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flusec.scanFile",
        "title": "Flusec: Scan current file for secrets"
      },
      {
        "command": "flusec.manageRules",
        "title": "Open HSD Rule Manager"
      },
      {
        "command": "flusec.openFindings",
        "title": "Open HSD Dashboard"
      },
      {
        "command": "flusec.updateRulePacks",
        "title": "Flusec: Update Rule Packs (Base Rules + Heuristics)"
      },
      {
        "command": "flusec.uploadFindings",
        "title": "Flusec: Upload Findings to DB"
      }
    ],
    "configuration": {
      "title": "FLUSEC",
      "properties": {
        "flusec.ruleRepoBaseUrl": {
          "type": "string",
          "default": "https://raw.githubusercontent.com/FLUSEC-25-26/flusec-rulepacks/main",
          "description": "Base URL for flusec-rulepacks raw files...",
          "scope": "application"
        },
        "flusec.cloudUploadEndpoint": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "FLUSEC Cloud API base URL (example: https://cloud.yourcompany.com)."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flusec",
          "title": "FLUSEC",
          "icon": "resources/programming-security-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "flusec": [
        {
          "id": "flusecNavView",
          "name": "FLUSEC Navigation"
        }
      ]
    }
  },
  "files": [
    "dist",
    "web",
    "dart-analyzer",
    "resources"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
